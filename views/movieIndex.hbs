<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{#if movie}}{{movie.Title}}{{else}}Movie Not Found{{/if}}</title>
    <link rel="stylesheet" href="/stylesheets/dataStyle.css" />
  </head>
  <body>
    {{#if error}}
      <div class="error-message">
        <h2>Error</h2>
        <p>{{error}}</p>
      </div>
    {{/if}}

    {{#if movie}}
      <h2>Movie Details</h2>
      <table>
        <tr>
          <th>Property</th>
          <th>Value</th>
        </tr>
        <tr>
          <td>Movie ID</td>
          <td>{{movie.Movie_ID}}</td>
        </tr>
        <tr>
          <td>Year</td>
          <td>{{movie.Year}}</td>
        </tr>
        <tr>
          <td>Rated</td>
          <td>{{movie.Rated}}</td>
        </tr>
        <tr>
          <td>Released</td>
          <td>{{movie.Released}}</td>
        </tr>
        <tr>
          <td>Runtime</td>
          <td>{{movie.Runtime}}</td>
        </tr>
        <tr>
          <td>Genre</td>
          <td>{{movie.Genre}}</td>
        </tr>
        <tr>
          <td>Director</td>
          <td>{{movie.Director}}</td>
        </tr>
        <tr>
          <td>Plot</td>
          <td>{{movie.Plot}}</td>
        </tr>
        <tr>
          <td>Awards</td>
          <td>{{movie.Awards}}</td>
        </tr>
        <tr>
          <td>IMDb Rating</td>
          <td>{{movie.imdbRating}}</td>
        </tr>
        <tr>
          <td>Poster</td>
          <td>
            <img
              src="{{movie.Poster}}"
              alt="{{movie.Title}} Poster"
              style="width:100px;"
            />
          </td>
        </tr>
      </table>
    {{else}}
      <h2>No Movie Found</h2>
    {{/if}}
  </body>
</html>